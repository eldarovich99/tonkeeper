<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <uikit.widget.HeaderView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:action="@drawable/ic_close_16"
        android:title="@string/settings"
        app:ignoreSystemOffset="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/slippage_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/offsetMedium"
        android:layout_marginTop="12dp"
        android:text="@string/slippage"
        android:textAppearance="@style/TextAppearance.Label1"
        android:textColor="@color/textPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header" />

    <TextView
        android:id="@+id/slippage_warning_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/offsetMedium"
        android:text="@string/slippage_warning"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/textSecondaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slippage_label" />

    <com.tonapps.tonkeeper.ui.component.swap.PercentageEditText
        android:id="@+id/percentage_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/offsetMedium"
        android:padding="@dimen/offsetMedium"
        android:layout_marginTop="12dp"
        android:hint="Custom %"
        android:textAppearance="@style/TextAppearance.Body1"
        android:textColor="@color/textPrimaryDark"
        android:textColorHint="@color/textSecondaryDark"
        app:layout_constraintTop_toBottomOf="@id/slippage_warning_label"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>