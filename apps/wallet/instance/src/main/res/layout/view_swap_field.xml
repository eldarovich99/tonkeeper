<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_field_secondary"
    android:padding="@dimen/offsetMedium">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/send_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="?attr/textSecondaryColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/balance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="?attr/textSecondaryColor"
        app:layout_constraintEnd_toStartOf="@id/max_label"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Balance: 100,500.01" />

    <!-- TODO V enlarge clickable area-->
    <TextView
        android:id="@+id/max_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:text="@string/max"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="?attr/fieldActiveBorderColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_secondary_24"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/send_label">

        <uikit.widget.FrescoView
            android:id="@+id/icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="@dimen/offsetMedium"
            android:background="@drawable/bg_oval"
            android:backgroundTint="?attr/backgroundContentTintColor"
            android:padding="4dp"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundAsCircle="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="14dp"
            android:textAppearance="@style/TextAppearance.Body1"
            android:textColor="?attr/buttonSecondaryForegroundColor"
            tools:text="TON" />

        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="@style/TextAppearance.NUM2"
            android:id="@+id/amount_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="?attr/buttonSecondaryForegroundColor"
            tools:text="0"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>